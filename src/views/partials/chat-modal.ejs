<!-- Chat Modal -->
<dialog id="chatModal" class="modal">
    <div class="modal-box w-11/12 max-w-5xl h-[85vh] flex flex-col p-0">
        <!-- Header with close button only -->
        <div class="flex justify-end items-center p-4 flex-shrink-0">
            <button class="btn btn-sm btn-circle btn-ghost" onclick="document.getElementById('chatModal').close()">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                </svg>
            </button>
        </div>
        
        <!-- Chat Messages Container with fixed height and scrolling -->
        <div id="chatMessages" class="flex-1 overflow-y-auto p-4 space-y-4 min-h-0">
            <div class="chat chat-start">
                <div class="chat-image avatar">
                    <div class="w-8 h-8 rounded-full">
                        <div class="bg-primary text-primary-content rounded-full w-8 h-8 flex items-center justify-center">
                            <span class="text-xs">AI</span>
                        </div>
                    </div>
                </div>
                <div class="chat-header text-xs opacity-50 mb-1">
                    AI Assistant
                    <time class="text-xs opacity-50 ml-2">now</time>
                </div>
                <div class="chat-bubble bg-gray-100 text-gray-800 max-w-2xl">
                    Hi! I'm your AI assistant. How can I help you with your Kanban board today?
                </div>
            </div>
        </div>
        
        <!-- Thinking indicator (inline with messages) -->
        <div id="chatThinking" class="hidden px-4">
            <div class="chat chat-start">
                <div class="chat-image avatar">
                    <div class="w-8 h-8 rounded-full">
                        <div class="bg-primary text-primary-content rounded-full w-8 h-8 flex items-center justify-center">
                            <span class="text-xs">AI</span>
                        </div>
                    </div>
                </div>
                <div class="chat-bubble bg-gray-100 text-gray-800 max-w-2xl">
                    <div class="flex items-center gap-2">
                        <span class="loading loading-dots loading-sm"></span>
                        <span class="text-sm">Thinking...</span>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Input Area (fixed at bottom) -->
        <div class="p-4 border-t border-base-300 flex-shrink-0 bg-base-100">
            <div class="flex gap-3 items-end">
                <div class="flex-1">
                    <textarea 
                        id="chatInput" 
                        placeholder="Type your message..." 
                        class="textarea textarea-bordered w-full resize-none min-h-[2.5rem] max-h-32"
                        rows="1"
                        onkeydown="handleChatKeyDown(event)"
                        oninput="adjustTextareaHeight(this)"></textarea>
                </div>
                <button 
                    onclick="sendChatMessage()" 
                    class="btn btn-primary btn-circle flex-shrink-0" 
                    id="sendButton"
                    disabled>
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"></path>
                    </svg>
                </button>
            </div>
            <div class="mt-2">
                <div class="text-xs text-base-content/50">
                    Press <kbd class="kbd kbd-xs">Enter</kbd> to send, <kbd class="kbd kbd-xs">Shift</kbd>+<kbd class="kbd kbd-xs">Enter</kbd> for new line
                </div>
            </div>
        </div>
    </div>
    <form method="dialog" class="modal-backdrop">
        <button>close</button>
    </form>
</dialog>

<!-- Marked.js for Markdown Rendering -->
<script src="https://cdn.jsdelivr.net/npm/marked/marked.min.js"></script>