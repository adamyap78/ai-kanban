<!-- Unified Card Form Modal Content -->
<div class="space-y-4" onkeydown="if(event.key==='Escape') { document.getElementById('cardDetailModal').close(); }">
    <!-- Close button only -->
    <div class="flex justify-end">
        <button onclick="document.getElementById('cardDetailModal').close()" class="btn btn-ghost btn-sm btn-circle">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
        </button>
    </div>

    <!-- Form - determines endpoint based on card.id presence -->
    <form <% if (card?.id) { %>hx-put="/cards/<%= card.id %>"<% } else { %>hx-post="/cards"<% } %>
          hx-target="#htmx-response"
          hx-swap="innerHTML">
        
        <% if (!card?.id && listId) { %>
            <input type="hidden" name="listId" value="<%= listId %>">
        <% } %>
        
        <div class="space-y-4">
            <div class="form-control w-full">
                <input type="text" 
                       name="title" 
                       value="<%= card?.title || '' %>" 
                       class="input input-bordered w-full text-lg" 
                       required 
                       maxlength="200"
                       placeholder="Card title"
                       autofocus
                       onkeypress="if(event.key==='Enter') { event.preventDefault(); document.querySelector('.btn-primary').click(); }">
            </div>
            
            <div class="form-control w-full">
                <textarea name="description" 
                          class="textarea textarea-bordered w-full h-24" 
                          maxlength="2000"
                          placeholder="Add description..."><%= card?.description || '' %></textarea>
            </div>
            
            <div class="form-control w-full">
                <input type="date" 
                       name="dueDate" 
                       value="<%= card?.dueDate ? new Date(card.dueDate).toISOString().split('T')[0] : '' %>" 
                       class="input input-bordered w-full"
                       onkeypress="if(event.key==='Enter') { event.preventDefault(); document.querySelector('.btn-primary').click(); }">
            </div>
        </div>
        
        <!-- Form Actions -->
        <div class="flex justify-between items-center pt-6">
            <% if (card?.id) { %>
                <a href="#" 
                   onclick="deleteCardAndRefresh('<%= card.id %>')"
                   class="link link-error text-sm">
                    Delete
                </a>
            <% } else { %>
                <div></div>
            <% } %>
            
            <button type="button" 
                    <% if (card?.id) { %>hx-put="/cards/<%= card.id %>"<% } else { %>hx-post="/cards"<% } %>
                    hx-trigger="click"
                    hx-target="#htmx-response"
                    hx-swap="innerHTML"
                    hx-include="closest form"
                    onclick="document.getElementById('cardDetailModal').close()"
                    class="btn btn-primary">
                Save
            </button>
        </div>
    </form>
    
    <!-- Hidden div for htmx responses -->
    <div id="htmx-response" style="display: none;"></div>
</div>