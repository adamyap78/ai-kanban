<!-- Unified Card Form Modal Content - identical interface for add and edit -->
<div class="space-y-6">
    <!-- Static heading - no mode detection -->
    <div class="flex justify-between items-start mb-4">
        <h2 class="text-xl font-bold text-base-content">Card Details</h2>
        <button onclick="document.getElementById('cardDetailModal').close()" class="btn btn-ghost btn-sm btn-circle">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
        </button>
    </div>

    <!-- Form - determines endpoint based on card.id presence -->
    <form <% if (card?.id) { %>hx-put="/cards/<%= card.id %>"<% } else { %>hx-post="/cards"<% } %>
          hx-target="#htmx-response"
          hx-swap="innerHTML">
        
        <% if (!card?.id && listId) { %>
            <input type="hidden" name="listId" value="<%= listId %>">
        <% } %>
        
        <div class="space-y-4">
            <div class="form-control">
                <label class="label">
                    <span class="label-text font-medium">Card Title</span>
                </label>
                <input type="text" 
                       name="title" 
                       value="<%= card?.title || '' %>" 
                       class="input input-bordered input-lg" 
                       required 
                       maxlength="200"
                       placeholder="Enter card title...">
            </div>
            
            <div class="form-control">
                <label class="label">
                    <span class="label-text font-medium">Description</span>
                </label>
                <textarea name="description" 
                          class="textarea textarea-bordered h-32" 
                          maxlength="2000"
                          placeholder="Enter card description..."><%= card?.description || '' %></textarea>
            </div>
            
            <div class="form-control">
                <label class="label">
                    <span class="label-text font-medium">Due Date</span>
                </label>
                <input type="date" 
                       name="dueDate" 
                       value="<%= card?.dueDate ? new Date(card.dueDate).toISOString().split('T')[0] : '' %>" 
                       class="input input-bordered">
            </div>
        </div>
        
        <!-- Form Actions -->
        <div class="flex justify-between items-center pt-6 mt-6 border-t border-base-300">
            <% if (card?.id) { %>
                <button type="button" 
                        hx-delete="/cards/<%= card.id %>"
                        hx-confirm="Are you sure you want to delete this card? This action cannot be undone."
                        hx-trigger="click"
                        hx-target="#htmx-response"
                        hx-swap="innerHTML"
                        onclick="setTimeout(() => document.getElementById('cardDetailModal').close(), 10)"
                        class="btn btn-error btn-outline">
                    Delete Card
                </button>
            <% } else { %>
                <div></div>
            <% } %>
            
            <div class="flex gap-2">
                <button type="button" 
                        onclick="document.getElementById('cardDetailModal').close()" 
                        class="btn btn-ghost">
                    Cancel
                </button>
                <button type="button" 
                        <% if (card?.id) { %>hx-put="/cards/<%= card.id %>"<% } else { %>hx-post="/cards"<% } %>
                        hx-trigger="click"
                        hx-target="#htmx-response"
                        hx-swap="innerHTML"
                        hx-include="closest form"
                        onclick="document.getElementById('cardDetailModal').close()"
                        class="btn btn-primary">
                    Save
                </button>
            </div>
        </div>
    </form>
    
    <!-- Hidden div for htmx responses -->
    <div id="htmx-response" style="display: none;"></div>
</div>