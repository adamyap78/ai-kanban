<!-- Unified Card Form Modal Content -->
<div class="h-full" onkeydown="if(event.key==='Escape') { document.getElementById('cardDetailModal').close(); }">
    <!-- Header -->
    <div class="flex justify-between items-start mb-6 pb-4 border-b border-gray-200">
        <div class="flex-1 min-w-0">
            <input type="text" 
                   name="title" 
                   value="<%= card?.title || '' %>" 
                   class="input input-ghost w-full text-xl font-semibold text-gray-800 p-0 border-0 focus:border-0 focus:outline-0 bg-transparent" 
                   form="card-form"
                   required 
                   maxlength="200"
                   placeholder="Card title"
                   autofocus
                   onkeypress="if(event.key==='Enter') { event.preventDefault(); document.querySelector('#cardDetailModal .btn-primary').click(); }">
        </div>
        <button onclick="document.getElementById('cardDetailModal').close()" class="btn btn-ghost btn-sm btn-circle ml-4">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
        </button>
    </div>

    <!-- Two Column Layout -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- Main Content Column -->
        <div class="lg:col-span-2 space-y-6">
            <!-- Form - determines endpoint based on card.id presence -->
            <form id="card-form" 
                  <% if (card?.id) { %>hx-put="/cards/<%= card.id %>"<% } else { %>hx-post="/cards"<% } %>
                  hx-target="#htmx-response"
                  hx-swap="innerHTML">
                
                <% if (!card?.id && listId) { %>
                    <input type="hidden" name="listId" value="<%= listId %>">
                <% } %>
                
                <div class="space-y-6">
                    <!-- Card Description -->
                    <div class="form-control w-full">
                        <label class="label">
                            <span class="label-text font-medium">Description</span>
                        </label>
                        <textarea name="description" 
                                  class="textarea textarea-bordered w-full h-32" 
                                  maxlength="2000"
                                  placeholder="Add a more detailed description..."><%= card?.description || '' %></textarea>
                    </div>
                </div>
                
                <!-- Hidden div for htmx responses -->
                <div id="htmx-response" style="display: none;"></div>
            </form>
            
            <!-- Comments Section (only show for existing cards) -->
            <% if (card?.id) { %>
                <div id="card-comments-section" 
                     hx-get="/cards/<%= card.id %>/comments"
                     hx-trigger="load"
                     hx-swap="innerHTML">
                    <!-- Comments will load here -->
                    <div class="text-center py-4">
                        <div class="loading loading-spinner loading-sm"></div>
                        <span class="text-sm text-gray-500 ml-2">Loading comments...</span>
                    </div>
                </div>
            <% } %>
        </div>
        
        <!-- Sidebar Column -->
        <div class="flex flex-col h-full">
            <!-- Due Date at top -->
            <div class="form-control w-full">
                <label class="label">
                    <span class="label-text text-sm font-medium">Due Date</span>
                </label>
                <input type="date" 
                       name="dueDate" 
                       value="<%= card?.dueDate ? new Date(card.dueDate).toISOString().split('T')[0] : '' %>" 
                       class="input input-bordered input-sm w-full"
                       form="card-form"
                       onkeypress="if(event.key==='Enter') { event.preventDefault(); document.querySelector('#cardDetailModal .btn-primary').click(); }">
            </div>
            
            <!-- Spacer to push buttons to bottom -->
            <div class="flex-1"></div>
            
            <!-- Bottom-aligned buttons with minimal space -->
            <div class="space-y-2">
                <!-- Save Button -->
                <button type="button" 
                        <% if (card?.id) { %>hx-put="/cards/<%= card.id %>"<% } else { %>hx-post="/cards"<% } %>
                        hx-trigger="click"
                        hx-target="#htmx-response"
                        hx-swap="innerHTML"
                        hx-include="#card-form"
                        onclick="document.getElementById('cardDetailModal').close()"
                        class="btn btn-primary w-full">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                    Save Card
                </button>
                
                <!-- Delete Link -->
                <% if (card?.id) { %>
                    <div class="text-center">
                        <a href="#" 
                           onclick="deleteCardAndRefresh('<%= card.id %>')"
                           class="link link-error text-sm">
                            Delete
                        </a>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</div>