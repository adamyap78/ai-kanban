<!-- Card Edit Modal Content -->
<div class="space-y-6">
    <!-- Card Context Header (Read-only info for reference) -->
    <div class="bg-base-200 rounded-lg p-4 border-l-4 border-primary">
        <div class="flex justify-between items-start mb-3">
            <h2 class="text-xl font-bold text-base-content">Edit Card</h2>
            <button onclick="document.getElementById('cardDetailModal').close()" class="btn btn-ghost btn-sm btn-circle">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                </svg>
            </button>
        </div>
        
        <!-- Card Metadata for Context -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-3 text-sm">
            <div>
                <span class="text-base-content/70">Created:</span>
                <span class="font-medium"><%= new Date(card.createdAt).toLocaleDateString() %></span>
            </div>
            <div>
                <span class="text-base-content/70">Updated:</span>
                <span class="font-medium"><%= new Date(card.updatedAt).toLocaleDateString() %></span>
            </div>
            <% if (card.creator) { %>
            <div>
                <span class="text-base-content/70">By:</span>
                <span class="font-medium"><%= card.creator.name %></span>
            </div>
            <% } %>
        </div>
    </div>

    <!-- Edit Form -->
    <form hx-put="/cards/<%= card.id %>" 
          hx-trigger="submit"
          hx-target="body"
          hx-swap="none">
        
        <div class="space-y-4">
            <div class="form-control">
                <label class="label">
                    <span class="label-text font-medium">Card Title</span>
                </label>
                <input type="text" 
                       name="title" 
                       value="<%= card.title %>" 
                       class="input input-bordered input-lg" 
                       required 
                       maxlength="200"
                       placeholder="Enter card title...">
            </div>
            
            <div class="form-control">
                <label class="label">
                    <span class="label-text font-medium">Description</span>
                </label>
                <textarea name="description" 
                          class="textarea textarea-bordered h-32" 
                          maxlength="2000"
                          placeholder="Enter card description..."><%= card.description || '' %></textarea>
            </div>
            
            <div class="form-control">
                <label class="label">
                    <span class="label-text font-medium">Due Date</span>
                </label>
                <input type="date" 
                       name="dueDate" 
                       value="<%= card.dueDate ? new Date(card.dueDate).toISOString().split('T')[0] : '' %>" 
                       class="input input-bordered">
            </div>
        </div>
        
        <!-- Form Actions -->
        <div class="flex justify-between items-center pt-6 mt-6 border-t border-base-300">
            <button type="button" 
                    hx-delete="/cards/<%= card.id %>"
                    hx-confirm="Are you sure you want to delete this card? This action cannot be undone."
                    hx-trigger="click"
                    hx-target="body"
                    hx-swap="none"
                    class="btn btn-error btn-outline">
                Delete Card
            </button>
            
            <div class="flex gap-2">
                <button type="button" 
                        onclick="document.getElementById('cardDetailModal').close()" 
                        class="btn btn-ghost">
                    Cancel
                </button>
                <button type="submit" 
                        class="btn btn-primary">
                    Save Changes
                </button>
            </div>
        </div>
    </form>
</div>