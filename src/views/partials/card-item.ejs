<div id="card-<%= card.id %>" 
     class="card bg-base-100 shadow-sm hover:shadow-lg transition-shadow cursor-pointer draggable" 
     data-card-id="<%= card.id %>"
     data-card-position="<%= card.position %>"
     hx-get="/cards/<%= card.id %>"
     hx-target="#cardDetailContent"
     hx-trigger="click"
     onclick="document.getElementById('cardDetailModal').showModal()"
     draggable="true"
     ondragstart="handleDragStart(event)"
     ondragend="handleDragEnd(event)"
     ondragover="event.preventDefault()">
    <div class="card-body p-4">
        <h4 class="card-title text-sm font-medium text-base-content"><%= card.title %></h4>
        <% if (card.description) { %>
            <p class="text-xs text-base-content/70 line-clamp-3"><%= card.description %></p>
        <% } %>
        
        <div class="flex justify-between items-center mt-3">
            <div class="flex items-center gap-2">
                <% if (card.dueDate) { %>
                    <div class="badge badge-outline badge-sm">
                        <%= new Date(card.dueDate).toLocaleDateString() %>
                    </div>
                <% } %>
            </div>
            
            <div class="flex items-center gap-1">
                <% if (card.creator) { %>
                    <div class="tooltip" data-tip="<%= card.creator.name %>">
                        <div class="avatar placeholder">
                            <div class="bg-neutral text-neutral-content rounded-full w-6">
                                <span class="text-xs"><%= card.creator.name.charAt(0).toUpperCase() %></span>
                            </div>
                        </div>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</div>