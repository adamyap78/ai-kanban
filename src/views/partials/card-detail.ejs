<div class="space-y-6">
    <!-- Card Header -->
    <div class="flex justify-between items-start">
        <h2 class="text-2xl font-bold text-base-content"><%= card.title %></h2>
        <div class="dropdown dropdown-end">
            <div tabindex="0" role="button" class="btn btn-ghost btn-sm">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 5v.01M12 12v.01M12 19v.01"></path>
                </svg>
            </div>
            <ul tabindex="0" class="dropdown-content menu bg-base-100 rounded-box z-[1] w-52 p-2 shadow">
                <li><a onclick="editCard()">Edit Card</a></li>
                <li><a onclick="deleteCard('<%= card.id %>')" class="text-error">Delete Card</a></li>
            </ul>
        </div>
    </div>

    <!-- Card Metadata -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
            <div class="text-sm text-base-content/70 mb-1">Created</div>
            <div class="font-medium"><%= new Date(card.createdAt).toLocaleDateString() %></div>
        </div>
        <div>
            <div class="text-sm text-base-content/70 mb-1">Last Updated</div>
            <div class="font-medium"><%= new Date(card.updatedAt).toLocaleDateString() %></div>
        </div>
        <% if (card.dueDate) { %>
        <div>
            <div class="text-sm text-base-content/70 mb-1">Due Date</div>
            <div class="badge badge-outline"><%= new Date(card.dueDate).toLocaleDateString() %></div>
        </div>
        <% } %>
        <% if (card.creator) { %>
        <div>
            <div class="text-sm text-base-content/70 mb-1">Created By</div>
            <div class="flex items-center gap-2">
                <div class="avatar placeholder">
                    <div class="bg-neutral text-neutral-content rounded-full w-8">
                        <span class="text-sm"><%= card.creator.name.charAt(0).toUpperCase() %></span>
                    </div>
                </div>
                <span class="font-medium"><%= card.creator.name %></span>
            </div>
        </div>
        <% } %>
    </div>

    <!-- Card Description -->
    <div>
        <h3 class="text-lg font-semibold mb-3">Description</h3>
        <% if (card.description) { %>
            <div class="bg-base-200 rounded-lg p-4">
                <p class="text-base-content whitespace-pre-wrap"><%= card.description %></p>
            </div>
        <% } else { %>
            <div class="bg-base-200 rounded-lg p-4 text-center text-base-content/50">
                <p>No description provided</p>
                <button onclick="editCard()" class="btn btn-sm btn-ghost mt-2">Add Description</button>
            </div>
        <% } %>
    </div>

    <!-- Card Actions -->
    <div class="flex justify-between items-center pt-4 border-t border-base-300">
        <button onclick="document.getElementById('cardDetailModal').close()" class="btn btn-ghost">
            Close
        </button>
        <div class="flex gap-2">
            <button onclick="editCard()" class="btn btn-primary btn-sm">
                Edit Card
            </button>
        </div>
    </div>
</div>

<!-- Edit Card Form (Initially Hidden) -->
<div id="editCardForm" class="hidden space-y-6">
    <form onsubmit="updateCard(event, '<%= card.id %>')">
        <div class="form-control mb-4">
            <label class="label">
                <span class="label-text">Card Title</span>
            </label>
            <input type="text" name="title" value="<%= card.title %>" class="input input-bordered" required maxlength="200">
        </div>
        
        <div class="form-control mb-4">
            <label class="label">
                <span class="label-text">Description</span>
            </label>
            <textarea name="description" class="textarea textarea-bordered" rows="5" maxlength="2000"><%= card.description || '' %></textarea>
        </div>
        
        <div class="form-control mb-4">
            <label class="label">
                <span class="label-text">Due Date</span>
            </label>
            <input type="date" name="dueDate" 
                   value="<%= card.dueDate ? new Date(card.dueDate).toISOString().split('T')[0] : '' %>" 
                   class="input input-bordered">
        </div>
        
        <div class="flex justify-between">
            <button type="button" onclick="cancelEdit()" class="btn btn-ghost">Cancel</button>
            <div class="flex gap-2">
                <button type="button" onclick="deleteCard('<%= card.id %>')" class="btn btn-error btn-sm">Delete</button>
                <button type="submit" class="btn btn-primary">Save Changes</button>
            </div>
        </div>
    </form>
</div>

<script>
function editCard() {
    // Hide card detail view and show edit form
    document.querySelector('#cardDetailContent > div:first-child').classList.add('hidden');
    document.getElementById('editCardForm').classList.remove('hidden');
}

function cancelEdit() {
    // Show card detail view and hide edit form
    document.querySelector('#cardDetailContent > div:first-child').classList.remove('hidden');
    document.getElementById('editCardForm').classList.add('hidden');
}

async function updateCard(event, cardId) {
    event.preventDefault();
    
    const form = event.target;
    const formData = new FormData(form);
    
    const data = {
        title: formData.get('title'),
        description: formData.get('description'),
        dueDate: formData.get('dueDate') || null
    };
    
    try {
        const response = await fetch(`/cards/${cardId}`, {
            method: 'PUT',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify(data)
        });
        
        const result = await response.json();
        
        if (result.success) {
            // Close modal and reload page to show updated card
            document.getElementById('cardDetailModal').close();
            location.reload();
        } else {
            alert('Failed to update card: ' + (result.error || 'Unknown error'));
        }
    } catch (error) {
        console.error('Error updating card:', error);
        alert('Failed to update card');
    }
}

async function deleteCard(cardId) {
    if (confirm('Are you sure you want to delete this card? This action cannot be undone.')) {
        try {
            const response = await fetch(`/cards/${cardId}`, {
                method: 'DELETE',
                headers: {
                    'Content-Type': 'application/json',
                }
            });
            
            const result = await response.json();
            
            if (result.success) {
                // Close modal and reload page
                document.getElementById('cardDetailModal').close();
                location.reload();
            } else {
                alert('Failed to delete card: ' + (result.error || 'Unknown error'));
            }
        } catch (error) {
            console.error('Error deleting card:', error);
            alert('Failed to delete card');
        }
    }
}
</script>