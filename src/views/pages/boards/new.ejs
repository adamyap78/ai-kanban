<div class="w-full max-w-2xl mx-auto mt-8">
    <div class="flex items-center mb-8">
        <a href="/orgs/<%= organization.slug %>" class="link text-base-content/70 mr-4">‚Üê <%= organization.name %></a>
        <h1 class="text-3xl font-bold text-base-content">Create Board</h1>
    </div>
    
    <% if (locals.flash?.error) { %>
        <div class="alert alert-error mb-4">
            <%= locals.flash.error %>
        </div>
    <% } %>
    
    <% if (errors && errors.length > 0) { %>
        <div class="alert alert-error mb-4">
            <ul class="list-disc ml-4">
                <% errors.forEach(error => { %>
                    <li><%= error.message %></li>
                <% }) %>
            </ul>
        </div>
    <% } %>
    
    <div class="card bg-base-100 shadow-xl">
        <div class="card-body">
            <form method="POST" action="/orgs/<%= organization.slug %>/boards">
                <input type="hidden" name="organizationId" value="<%= organization.id %>">
                
                <div class="form-control mb-6">
                    <label for="name" class="label">
                        <span class="label-text">Board Name</span>
                    </label>
                    <input 
                        type="text" 
                        id="name" 
                        name="name" 
                        value="<%= oldInput.name || '' %>"
                        required
                        class="input input-bordered w-full"
                        placeholder="e.g., Website Redesign, Sprint Planning"
                    >
                    <label class="label">
                        <span class="label-text-alt">Choose a descriptive name for your project board</span>
                    </label>
                </div>
            
                <div class="form-control mb-8">
                    <label for="description" class="label">
                        <span class="label-text">Description (Optional)</span>
                    </label>
                    <textarea 
                        id="description" 
                        name="description" 
                        rows="3"
                        class="textarea textarea-bordered w-full"
                        placeholder="What's this board for? Any important details or goals..."
                    ><%= oldInput.description || '' %></textarea>
                    <label class="label">
                        <span class="label-text-alt">Help your team understand the purpose of this board</span>
                    </label>
                </div>
            
                <div class="alert alert-info mb-6">
                    <div>
                        <h4 class="font-medium text-sm mb-2">What you'll get:</h4>
                        <ul class="list-disc ml-4 text-sm space-y-1">
                            <li>Default lists: "To Do", "In Progress", "Done"</li>
                            <li>Ready to add cards and start organizing</li>
                            <li>Full access for all organization members</li>
                        </ul>
                    </div>
                </div>
            
                <div class="card-actions justify-end">
                    <a href="/orgs/<%= organization.slug %>" class="btn btn-neutral">Cancel</a>
                    <button type="submit" class="btn btn-success">Create Board</button>
                </div>
            </form>
        </div>
    </div>
</div>