<div style="margin-bottom: 2rem;">
    <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 1rem;">
        <div style="display: flex; align-items: center;">
            <a href="/orgs/<%= organization.slug %>" style="color: #6b7280; text-decoration: none; margin-right: 1rem;">‚Üê <%= organization.name %></a>
            <h1 style="margin: 0; color: #1f2937;"><%= board.name %></h1>
        </div>
        
        <div>
            <a href="/orgs/<%= organization.slug %>/boards/<%= board.id %>/settings" class="btn" style="background: #6b7280; margin-right: 0.5rem; font-size: 0.875rem;">Board Settings</a>
            <button class="btn" style="background: #059669; font-size: 0.875rem;" disabled>+ Add Card (Coming Soon)</button>
        </div>
    </div>
    
    <% if (board.description) { %>
        <p style="color: #6b7280; margin-bottom: 1.5rem; font-size: 1rem; line-height: 1.5;">
            <%= board.description %>
        </p>
    <% } %>
    
    <% if (locals.flash?.success) { %>
        <div style="background: #d1fae5; border: 1px solid #a7f3d0; color: #065f46; padding: 0.75rem; border-radius: 0.375rem; margin-bottom: 1rem;">
            <%= locals.flash.success %>
        </div>
    <% } %>
    
    <% if (locals.flash?.error) { %>
        <div style="background: #fee2e2; border: 1px solid #fecaca; color: #dc2626; padding: 0.75rem; border-radius: 0.375rem; margin-bottom: 1rem;">
            <%= locals.flash.error %>
        </div>
    <% } %>
</div>

