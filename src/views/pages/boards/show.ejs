<div class="mb-6">
    <div class="flex justify-between items-center mb-4">
        <div class="flex items-center">
            <h1 class="text-2xl font-bold text-primary"><%= board.name %></h1>
        </div>
        
        <div class="flex gap-2">
            <button onclick="openChatDrawer()" class="btn btn-primary btn-sm">
                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-3.582 8-8 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 3.582-8 8-8s8 3.582 8 8z"></path>
                </svg>
                Chat
            </button>
            <a href="/orgs/<%= organization.slug %>/boards/<%= board.id %>/settings" class="btn btn-neutral btn-sm">Board Settings</a>
        </div>
    </div>
    
    <% if (board.description) { %>
        <p class="text-base-content/70 mb-4 text-lg">
            <%= board.description %>
        </p>
    <% } %>
    
    <% if (locals.flash?.success) { %>
        <div class="alert alert-success mb-4">
            <%= locals.flash.success %>
        </div>
    <% } %>
    
    <% if (locals.flash?.error) { %>
        <div class="alert alert-error mb-4">
            <%= locals.flash.error %>
        </div>
    <% } %>
</div>

<!-- Kanban Board Container -->
<div id="board-content">
    <%- include('../../partials/board-content', { lists, cardsByList }) %>
</div>

<!-- Add List Modal -->
<dialog id="addListModal" class="modal">
    <div class="modal-box">
        <h3 class="font-bold text-lg mb-4">Add New List</h3>
        <form method="POST" action="/lists">
            <input type="hidden" name="boardId" value="<%= board.id %>">
            
            <div class="form-control mb-4">
                <label class="label">
                    <span class="label-text">List Name</span>
                </label>
                <input type="text" name="name" class="input input-bordered" placeholder="Enter list name..." required maxlength="100">
            </div>
            
            <div class="modal-action">
                <button type="button" class="btn btn-ghost" onclick="closeAddListModal()">Cancel</button>
                <button type="submit" class="btn btn-primary">Create List</button>
            </div>
        </form>
    </div>
    <form method="dialog" class="modal-backdrop">
        <button>close</button>
    </form>
</dialog>


<!-- Card Detail Modal -->
<dialog id="cardDetailModal" class="modal">
    <div class="modal-box max-w-4xl w-full max-h-[90vh] overflow-y-auto">
        <div id="cardDetailContent">
            <!-- Card details will be loaded here -->
        </div>
    </div>
    <form method="dialog" class="modal-backdrop">
        <button>close</button>
    </form>
</dialog>

<!-- Chat Drawer Functions -->
<script>
function openChatDrawer() {
    const chatDrawerToggle = document.getElementById('chatDrawerToggle');
    
    // Fetch fresh board context when opening chat
    if (typeof setBoardContext === 'function') {
        setBoardContext();
    }
    
    // Open the drawer
    chatDrawerToggle.checked = true;
}

// Keep backward compatibility
function openChatModal() {
    openChatDrawer();
}
</script>

<!-- Kanban JavaScript -->
<%- include('../../partials/kanban-scripts') %>

<!-- Chat Drawer -->
<%- include('../../partials/chat-modal') %>

<!-- Chat JavaScript -->
<%- include('../../partials/chat-scripts') %>