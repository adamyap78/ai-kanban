<div class="w-full max-w-2xl mx-auto mt-8">
    <div class="flex items-center mb-8">
        <a href="/orgs/<%= organization.slug %>/boards/<%= board.id %>" class="link text-base-content/70 mr-4">‚Üê <%= board.name %></a>
        <h1 class="text-3xl font-bold text-base-content">Board Settings</h1>
    </div>
    
    <% if (locals.flash?.success) { %>
        <div class="alert alert-success mb-4">
            <%= locals.flash.success %>
        </div>
    <% } %>
    
    <% if (locals.flash?.error) { %>
        <div class="alert alert-error mb-4">
            <%= locals.flash.error %>
        </div>
    <% } %>
    
    <% if (errors && errors.length > 0) { %>
        <div class="alert alert-error mb-4">
            <ul class="list-disc ml-4">
                <% errors.forEach(error => { %>
                    <li><%= error.message %></li>
                <% }) %>
            </ul>
        </div>
    <% } %>
    
    <div class="card bg-base-100 shadow-xl mb-8">
        <div class="card-body">
            <h2 class="card-title text-xl mb-6">Board Information</h2>
            
            <form method="POST" action="/orgs/<%= organization.slug %>/boards/<%= board.id %>/settings">
                <div class="form-control mb-6">
                    <label for="name" class="label">
                        <span class="label-text">Board Name</span>
                    </label>
                    <input 
                        type="text" 
                        id="name" 
                        name="name" 
                        value="<%= oldInput.name || board.name %>"
                        required
                        class="input input-bordered w-full"
                        placeholder="Enter board name"
                    >
                </div>
            
                <div class="form-control mb-8">
                    <label for="description" class="label">
                        <span class="label-text">Description</span>
                    </label>
                    <textarea 
                        id="description" 
                        name="description" 
                        rows="4"
                        class="textarea textarea-bordered w-full"
                        placeholder="What's this board for? Any important details or goals..."
                    ><%= oldInput.description || board.description || '' %></textarea>
                </div>
            
                <div class="card-actions justify-end">
                    <a href="/orgs/<%= organization.slug %>/boards/<%= board.id %>" class="btn btn-neutral">Cancel</a>
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
    
    <div class="card bg-base-100 shadow-xl mb-8">
        <div class="card-body">
            <h2 class="card-title text-xl mb-6">Board Details</h2>
            
            <div class="grid gap-4 grid-cols-1 md:grid-cols-3">
                <div>
                    <div class="text-sm text-base-content/70 mb-1">Created</div>
                    <div class="font-medium"><%= new Date(board.createdAt).toLocaleDateString() %></div>
                </div>
                <div>
                    <div class="text-sm text-base-content/70 mb-1">Last Updated</div>
                    <div class="font-medium"><%= new Date(board.updatedAt).toLocaleDateString() %></div>
                </div>
                <div>
                    <div class="text-sm text-base-content/70 mb-1">Organization</div>
                    <div class="font-medium"><%= organization.name %></div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="card bg-base-100 shadow-xl border-l-4 border-error">
        <div class="card-body">
            <h2 class="card-title text-xl text-error mb-4">Danger Zone</h2>
            <p class="text-base-content/70 mb-6">
                Archive this board to remove it from your organization. All cards and lists will be preserved but hidden.
                Archived boards can be restored later.
            </p>
            
            <form method="POST" action="/orgs/<%= organization.slug %>/boards/<%= board.id %>/archive" onsubmit="return confirm('Are you sure you want to archive this board? All cards and lists will be hidden.')">
                <button type="submit" class="btn btn-error">
                    Archive Board
                </button>
            </form>
        </div>
    </div>
</div>