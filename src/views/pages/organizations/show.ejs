<div class="mb-8">
    <div class="flex justify-between items-center mb-4">
        <div class="flex items-center">
            <a href="/dashboard" class="link text-base-content/70 mr-4">‚Üê Dashboard</a>
            <h1 class="text-3xl font-bold text-base-content"><%= organization.name %></h1>
        </div>
        
        <div class="flex gap-2">
            <% if (['owner', 'admin'].includes(organization.userRole)) { %>
                <a href="/orgs/<%= organization.slug %>/settings" class="btn btn-neutral btn-sm">Settings</a>
            <% } %>
            <a href="/orgs/<%= organization.slug %>/boards/new" class="btn btn-success btn-sm">+ New Board</a>
        </div>
    </div>
    
    <% if (locals.flash?.success) { %>
        <div class="alert alert-success mb-4">
            <%= locals.flash.success %>
        </div>
    <% } %>
    
    <% if (locals.flash?.error) { %>
        <div class="alert alert-error mb-4">
            <%= locals.flash.error %>
        </div>
    <% } %>
</div>

<div class="grid gap-6 mb-8">
    <div class="card bg-base-100 shadow-xl">
        <div class="card-body">
            <div class="flex justify-between items-center mb-4">
                <h2 class="card-title text-lg">Organization Details</h2>
                <span class="badge badge-neutral">
                    <%= organization.userRole %>
                </span>
            </div>
            <p class="text-base-content/70">
                <strong>Created:</strong> <%= new Date(organization.createdAt).toLocaleDateString() %>
            </p>
            <p class="text-base-content/70 mt-2">
                <strong>URL:</strong> /orgs/<%= organization.slug %>
            </p>
        </div>
    </div>
</div>

<div class="card bg-base-100 shadow-xl">
    <div class="card-body">
        <div class="flex justify-between items-center mb-6">
            <h2 class="card-title text-xl">üìã Boards</h2>
            <a href="/orgs/<%= organization.slug %>/boards/new" class="btn btn-success btn-sm">+ Create Board</a>
        </div>
    
        <% if (boards && boards.length > 0) { %>
            <div class="grid gap-4 grid-cols-1 md:grid-cols-2 lg:grid-cols-3">
                <% boards.forEach(board => { %>
                    <div class="card card-bordered hover:shadow-lg transition">
                        <div class="card-body p-4">
                            <h3 class="card-title text-lg">
                                <a href="/orgs/<%= organization.slug %>/boards/<%= board.id %>" class="link link-hover text-base-content">
                                    <%= board.name %>
                                </a>
                            </h3>
                            <% if (board.description) { %>
                                <p class="text-base-content/70 text-sm mb-3">
                                    <%= board.description %>
                                </p>
                            <% } %>
                            <div class="flex justify-between items-center text-xs text-base-content/50">
                                <span>Created <%= new Date(board.createdAt).toLocaleDateString() %></span>
                                <a href="/orgs/<%= organization.slug %>/boards/<%= board.id %>/settings" class="link link-hover">Settings</a>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        <% } else { %>
            <div class="text-center py-12">
                <div class="text-5xl mb-4">üìã</div>
                <h3 class="text-lg font-medium text-base-content mb-2">No boards yet</h3>
                <p class="text-base-content/70 mb-6">Create your first board to start organizing your work</p>
                <a href="/orgs/<%= organization.slug %>/boards/new" class="btn btn-success">Create Your First Board</a>
            </div>
        <% } %>
    </div>
</div>

<% if (['owner', 'admin'].includes(organization.userRole)) { %>
    <div class="card bg-base-200 mt-8">
        <div class="card-body">
            <h3 class="card-title text-lg mb-4">Quick Actions</h3>
            <div class="flex gap-4 flex-wrap">
                <a href="/orgs/<%= organization.slug %>/boards/new" class="btn btn-success btn-sm">Create New Board</a>
                <a href="/orgs/<%= organization.slug %>/settings" class="btn btn-neutral btn-sm">Organization Settings</a>
                <button class="btn btn-disabled btn-sm" disabled>Invite Members (Coming Soon)</button>
            </div>
        </div>
    </div>
<% } %>