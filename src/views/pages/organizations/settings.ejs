<div class="w-full max-w-2xl mx-auto mt-8">
    <div class="flex items-center mb-8">
        <a href="/orgs/<%= organization.slug %>" class="link text-base-content/70 mr-4">‚Üê <%= organization.name %></a>
        <h1 class="text-3xl font-bold text-base-content">Organization Settings</h1>
    </div>
    
    <% if (locals.flash?.success) { %>
        <div class="alert alert-success mb-4">
            <%= locals.flash.success %>
        </div>
    <% } %>
    
    <% if (locals.flash?.error) { %>
        <div class="alert alert-error mb-4">
            <%= locals.flash.error %>
        </div>
    <% } %>
    
    <% if (errors && errors.length > 0) { %>
        <div class="alert alert-error mb-4">
            <ul class="list-disc ml-4">
                <% errors.forEach(error => { %>
                    <li><%= error.message %></li>
                <% }) %>
            </ul>
        </div>
    <% } %>
    
    <div class="card bg-base-100 shadow-xl mb-8">
        <div class="card-body">
            <h2 class="card-title text-xl mb-6">Basic Information</h2>
            
            <form method="POST" action="/orgs/<%= organization.slug %>/settings">
                <div class="form-control mb-6">
                    <label for="name" class="label">
                        <span class="label-text">Organization Name</span>
                    </label>
                    <input 
                        type="text" 
                        id="name" 
                        name="name" 
                        value="<%= oldInput.name || organization.name %>"
                        required
                        class="input input-bordered w-full"
                        placeholder="Enter organization name"
                    >
                </div>
            
                <div class="form-control mb-6">
                    <label class="label">
                        <span class="label-text">URL Slug</span>
                    </label>
                    <div class="join">
                        <span class="join-item bg-base-200 px-3 py-2 text-base-content/70">
                            localhost:3000/orgs/
                        </span>
                        <span class="join-item input input-bordered input-disabled flex-1 text-base-content/50">
                            <%= organization.slug %>
                        </span>
                    </div>
                    <label class="label">
                        <span class="label-text-alt">URL slugs cannot be changed after creation</span>
                    </label>
                </div>
            
                <div class="card-actions justify-end">
                    <a href="/orgs/<%= organization.slug %>" class="btn btn-neutral">Cancel</a>
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
    
    <div class="card bg-base-100 shadow-xl mb-8">
        <div class="card-body">
            <h2 class="card-title text-xl mb-6">Organization Details</h2>
            
            <div class="grid gap-4 grid-cols-1 md:grid-cols-3">
                <div>
                    <div class="text-sm text-base-content/70 mb-1">Created</div>
                    <div class="font-medium"><%= new Date(organization.createdAt).toLocaleDateString() %></div>
                </div>
                <div>
                    <div class="text-sm text-base-content/70 mb-1">Your Role</div>
                    <div class="badge badge-neutral">
                        <%= organization.userRole %>
                    </div>
                </div>
                <div>
                    <div class="text-sm text-base-content/70 mb-1">URL</div>
                    <div class="font-mono text-sm">/orgs/<%= organization.slug %></div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="alert alert-info">
        <div>
            <h2 class="text-xl font-medium mb-2">Coming Soon</h2>
            <p class="mb-4">Additional organization management features will be available soon:</p>
            
            <ul class="list-disc ml-4 space-y-1">
                <li>Invite and manage team members</li>
                <li>Role-based permissions</li>
                <li>Organization avatar and branding</li>
                <li>Usage analytics and billing</li>
                <li>Integration with external tools</li>
            </ul>
        </div>
    </div>
</div>