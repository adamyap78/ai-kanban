<div class="card w-full max-w-sm mx-auto mt-8">
    <div class="card-body">
        <h1 class="card-title text-2xl justify-center mb-4">Sign In</h1>
    
        <% if (locals.flash?.error) { %>
            <div class="alert alert-error mb-4">
                <%= locals.flash.error %>
            </div>
        <% } %>
    
        <% if (errors && errors.length > 0) { %>
            <div class="alert alert-error mb-4">
                <ul class="list-disc ml-4">
                    <% errors.forEach(error => { %>
                        <li><%= error.message %></li>
                    <% }) %>
                </ul>
            </div>
        <% } %>
    
        <form method="POST" action="/auth/login<%= redirectTo ? '?redirect=' + encodeURIComponent(redirectTo) : '' %>">
            <div class="form-control mb-4">
                <label for="email" class="label">
                    <span class="label-text">Email Address</span>
                </label>
                <input 
                    type="email" 
                    id="email" 
                    name="email" 
                    value="<%= oldInput.email || '' %>"
                    required
                    class="input input-bordered w-full"
                    placeholder="Enter your email"
                >
            </div>
        
            <div class="form-control mb-6">
                <label for="password" class="label">
                    <span class="label-text">Password</span>
                </label>
                <input 
                    type="password" 
                    id="password" 
                    name="password" 
                    required
                    class="input input-bordered w-full"
                    placeholder="Enter your password"
                >
            </div>
        
            <button type="submit" class="btn btn-primary w-full">
                Sign In
            </button>
        </form>
    
        <div class="text-center mt-6">
            <p class="text-base-content/70">
                Don't have an account? 
                <a href="/auth/register" class="link link-success font-medium">Create Account</a>
            </p>
        </div>
    
        <div class="text-center mt-4">
            <a href="/" class="link text-sm text-base-content/70">‚Üê Back to Home</a>
        </div>
    </div>
</div>