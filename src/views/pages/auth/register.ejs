<div class="card w-full max-w-sm mx-auto mt-8">
    <div class="card-body">
        <h1 class="card-title text-2xl justify-center mb-4">Create Account</h1>
    
        <% if (locals.flash?.error) { %>
            <div class="alert alert-error mb-4">
                <%= locals.flash.error %>
            </div>
        <% } %>
    
        <% if (errors && errors.length > 0) { %>
            <div class="alert alert-error mb-4">
                <ul class="list-disc ml-4">
                    <% errors.forEach(error => { %>
                        <li><%= error.message %></li>
                    <% }) %>
                </ul>
            </div>
        <% } %>
    
        <form method="POST" action="/auth/register">
            <div class="form-control mb-4">
                <label for="name" class="label">
                    <span class="label-text">Full Name</span>
                </label>
                <input 
                    type="text" 
                    id="name" 
                    name="name" 
                    value="<%= oldInput.name || '' %>"
                    required
                    class="input input-bordered w-full"
                    placeholder="Enter your full name"
                >
            </div>
        
            <div class="form-control mb-4">
                <label for="email" class="label">
                    <span class="label-text">Email Address</span>
                </label>
                <input 
                    type="email" 
                    id="email" 
                    name="email" 
                    value="<%= oldInput.email || '' %>"
                    required
                    class="input input-bordered w-full"
                    placeholder="Enter your email"
                >
            </div>
        
            <div class="form-control mb-4">
                <label for="password" class="label">
                    <span class="label-text">Password</span>
                </label>
                <input 
                    type="password" 
                    id="password" 
                    name="password" 
                    required
                    class="input input-bordered w-full"
                    placeholder="Enter your password"
                >
                <label class="label">
                    <span class="label-text-alt">Must be at least 8 characters with uppercase, lowercase, and number</span>
                </label>
            </div>
        
            <div class="form-control mb-6">
                <label for="confirmPassword" class="label">
                    <span class="label-text">Confirm Password</span>
                </label>
                <input 
                    type="password" 
                    id="confirmPassword" 
                    name="confirmPassword" 
                    required
                    class="input input-bordered w-full"
                    placeholder="Confirm your password"
                >
            </div>
        
            <button type="submit" class="btn btn-success w-full">
                Create Account
            </button>
        </form>
    
        <div class="text-center mt-6">
            <p class="text-base-content/70">
                Already have an account? 
                <a href="/auth/login" class="link link-primary font-medium">Sign In</a>
            </p>
        </div>
    </div>
</div>