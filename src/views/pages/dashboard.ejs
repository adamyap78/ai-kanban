<div class="mb-8">
    <% if (locals.flash?.success) { %>
        <div class="alert alert-success mb-4">
            <%= locals.flash.success %>
        </div>
    <% } %>
    
    <div class="flex justify-between items-center mb-8">
        <div>
            <h1 class="text-3xl font-bold text-base-content mb-2">Welcome back, <%= user.name %>!</h1>
            <p class="text-base-content/70">Manage your projects and collaborate with your team</p>
        </div>
        
        <div>
            <form method="POST" action="/auth/logout" class="inline">
                <button type="submit" class="btn btn-outline">Sign Out</button>
            </form>
        </div>
    </div>
</div>

<div class="grid gap-8 lg:grid-cols-3 md:grid-cols-2 grid-cols-1 mb-12">
    <div class="card bg-base-100 shadow-xl">
        <div class="card-body">
            <h3 class="card-title text-lg">ðŸ“Š Your Organizations</h3>
            <% if (organizations && organizations.length > 0) { %>
                <div class="space-y-2">
                    <% organizations.forEach(org => { %>
                        <div class="p-3 bg-base-200 rounded-lg border-l-4 border-primary">
                            <div class="flex justify-between items-center">
                                <div>
                                    <h4 class="font-medium text-base-content"><%= org.name %></h4>
                                    <p class="text-sm text-base-content/70">Role: <%= org.userRole %></p>
                                </div>
                                <a href="/orgs/<%= org.slug %>" class="btn btn-sm btn-primary">View</a>
                            </div>
                        </div>
                    <% }) %>
                </div>
            <% } else { %>
                <p class="text-base-content/70 italic">No organizations yet</p>
            <% } %>
            <div class="card-actions justify-start mt-4">
                <a href="/orgs/new" class="btn btn-success btn-sm">+ Create Organization</a>
            </div>
        </div>
    </div>
    
    <div class="card bg-base-100 shadow-xl">
        <div class="card-body">
            <h3 class="card-title text-lg">ðŸŽ¯ Recent Boards</h3>
            <p class="text-base-content/70 italic">No recent boards</p>
            <div class="card-actions justify-start mt-4">
                <button class="btn btn-neutral btn-sm" disabled>Create Board</button>
                <p class="text-xs text-base-content/50 mt-2">Create an organization first</p>
            </div>
        </div>
    </div>
    
    <div class="card bg-base-100 shadow-xl">
        <div class="card-body">
            <h3 class="card-title text-lg">ðŸ¤– AI Features</h3>
            <ul class="text-base-content/70 text-sm space-y-1">
                <li>Smart card creation</li>
                <li>Intelligent categorization</li>
                <li>Progress insights</li>
                <li>Semantic search</li>
            </ul>
            <div class="card-actions justify-start mt-4">
                <button class="btn btn-secondary btn-sm" disabled>Coming Soon</button>
            </div>
        </div>
    </div>
</div>

