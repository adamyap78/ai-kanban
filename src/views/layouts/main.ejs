<!DOCTYPE html>
<html lang="en" data-theme="fantasy">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title || 'Viable Kanban Board' %></title>
    
    <!-- Tailwind CSS + DaisyUI -->
    <link rel="stylesheet" href="/css/main.css">
    
    <% if (locals.hx) { %>
        <!-- Load htmx only when needed -->
        <script src="https://unpkg.com/htmx.org@1.9.10"></script>
    <% } %>
</head>
<body>
    <header class="navbar bg-neutral text-neutral-content shadow-sm fixed top-0 left-0 right-0 z-50">
        <div class="navbar-start">
            <% if (locals.user) { %>
                <a href="/dashboard" class="btn btn-ghost text-xl font-bold">Viable Kanban</a>
            <% } else { %>
                <a href="/" class="btn btn-ghost text-xl font-bold">Viable Kanban</a>
            <% } %>
        </div>
        <div class="navbar-end">
            <% if (locals.user) { %>
                <!-- Authenticated navigation -->
                <div class="flex items-center gap-3 mr-4">
                    <div class="avatar avatar-placeholder">
                        <div class="bg-info w-8 rounded-full">
                            <span class="text-xs"><%= locals.user.name.charAt(0).toUpperCase() %></span>
                        </div>
                    </div>
                </div>
                <form method="POST" action="/auth/logout" class="inline">
                    <button type="submit" class="btn btn-outline btn-sm">Sign Out</button>
                </form>
            <% } else { %>
                <!-- Guest navigation -->
                <a href="/auth/login" class="btn btn-outline mr-2">Sign In</a>
                <a href="/auth/register" class="btn btn-primary">Get Started</a>
            <% } %>
        </div>
    </header>
    
    <main class="w-full h-full p-8 pt-20">
        <%- body %>
    </main>
    
    <!-- Flash messages will be added later -->
    
    <script>
        // Basic progressive enhancement
        console.log('ðŸŽ¯ AI Kanban Board loaded');
        <% if (locals.hx) { %>
            console.log('âœ¨ htmx enhanced');
        <% } %>
    </script>
</body>
</html>